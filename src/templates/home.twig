{% extends "base.twig" %}

{% block content %}

	<section class="hero-home" style="background-image: url('{{ theme.link }}/src/images/2@2x.jpg')">
		<div class="container">
			<div class="hero-home__content">
				<h2 class="hero-home__content-headline">Join the movement</h2>
				<h3 class="hero-home__content-subline">Strenght, vigor and discipline. All in one spot.
					<br/>Become a part of movement.</h3>
				<div class="hero-home__content-cta">
					<button class="btn btn-primary btn-lg">Book a free class</button>
				</div>
				<div class="hero-home__content-cta">
					<button class="btn btn-outline-primary btn-lg">See our promotion</button>
				</div>
			</div>
		</div>
	</section>

	<section class="intro-section">
		<div class="container">
			<div class="row col-rows-2">
				<div class="col">
					<h2 class="intro-section__headline">The right way to get back your track
					</h2>
				</div>
				<div class="col">
					<div class="intro-section__copy">
						<p>At Vigor Crossfit, our primary focus is to get you fit for life in a safe environment.</p>
						<p>We’re committed to helping you move better and feel great doing it.</p>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section class="coaches-slider" style="background-image: url('{{ theme.link }}/src/images/1@2x.jpg')">
		<div class="container">
			<div class="coaches-slider__header text-center">
				<h2 class="coaches-slider__header-headline">We got you. Seriously.</h2>
				<h4 class="coaches-slider__header-subline">Team of our first class rockstar trainers, got you covered. Health plans, strenght training… you name it.</h4>
			</div>

			<div class="coaches-slider__slides slick-slider">
				<div class="coaches-slider__slides-item">
					<h3 class="slides-item__title">Ali Douhani</h3>
					<p class="slides-item__copy">2018 Olympic weightlifting champion,<br/>
						2016 Crossfit Games finalist, 2013 Crossfit Games - 2nd place</p>
				</div>
			</div>

			<div class="coaches-slider__cta">
				<button class="btn btn-link">Meet all our coaches</button>
			</div>
		</div>
	</section>

	<section class="our-plans">
		<div class="container">
			<h2 class="our-plans__headline text-center">Find the right plan</h2>

			<div class="our-plans__boxes">
				<div class="boxes__item">
					<div class="boxes__item-content">
						<h5 class="boxes__item-title">Beginner</h5>
						<ul class="list-unstyled">
							<li>2 times per week</li>
							<li>Stretching</li>
							<li>Light training</li>
						</ul>
					</div>
					<div class="text-center">
						<button class="btn btn-primary">$200 / Month</button>
					</div>
				</div>

				<div class="boxes__item boxes__item--featured">
					<div class="boxes__item-content">
						<h5 class="boxes__item-title">Intermediate</h5>
						<ul class="list-unstyled">
							<li>3 times per week</li>
							<li>Moderate Stretching</li>
							<li>Moderate cardio training</li>
							<li>Food plan</li>
							<li>Personal training plan</li>
						</ul>
					</div>
					<div class="text-center">
						<button class="btn btn-primary">$300 / Month</button>
					</div>
				</div>

				<div class="boxes__item">
					<div class="boxes__item-content">
						<h5 class="boxes__item-title">Competitive</h5>
						<ul class="list-unstyled">
							<li>6 times per week</li>
							<li>Core exercises</li>
							<li>Hard cardio training</li>
							<li>Strict food plan</li>
							<li>Personal training plan</li>
							<li>Personal trainer</li>
							<li>Competitive courses</li>
						</ul>
					</div>
					<div class="text-center">
						<button class="btn btn-primary">Contact Us</button>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section class="map-addresses">
		<h2 class="map-addresses__headline text-center">Come and stop by</h2>
		<div id="map"></div>
	</section>

	<section class="products">
		<div class="container">
			<div class="row">
				<div class="col-lg-4">
					<div class="products__content">
						<h2 class="products__headline">Share the passion</h2>
						<div class="products__copy">
							<p>Support the movement by wearing the toughest gear in the wild.<br/>
								Represent the chapter and yourself in our latest selected gear.</p>
						</div>
						<div class="products__cta">
							<button class="btn btn-link">Browse our shop</button>
						</div>
					</div>
				</div>
				<div class="col-lg-8">
					<div class="products__items">
						<div class="product">
							<div class="product__header">
								<div>
									<p class="product__header-title">Cross Shorts WMNS</p>
									<p class="product__header-price">$25.95</p>
								</div>
								<div class="product__add-to-cart">
									<button class="btn btn-primary btn-sm">Buy now</button>
								</div>
							</div>
						</div>

						<div class="product">
							<div class="product__header">
								<div>
									<p class="product__header-title">Lift Heavier t-shirt</p>
									<p class="product__header-price">$19.95</p>
								</div>
								<div class="product__add-to-cart">
									<button class="btn btn-primary btn-sm">Buy now</button>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section class="subscribe">
		<div class="container">
			<h2 class="subscribe__headline">Subscribe to our newsletter</h2>
			<h4 class="subscribe__subline">and get $20 off your new membership or your next order in our store.</h4>

			<div class="subscribe__form">
				<div class="subscribe__form-input">
					<input type="email" class="subscribe__form-input" placeholder="Your email address" value="name@email.com"/>
				</div>
				<div class="subscribe__form-submit">
					<button class="btn btn-outline-primary btn-lg" type="submit">Subscribe</button>
				</div>
			</div>
			<p class="subscribe__bottom-copy">We dont spam. I mean… Spam is in a can. Why would we put your email in a can?</p>
		</div>
	</section>
{% endblock %}

{% block javascripts %}
	<script src="{{ theme.link }}/src/js/google-map.js"></script>
{% endblock %}
